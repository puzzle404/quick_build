<section class="mt-8 rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
  <div class="mb-6 flex items-center justify-between">
    <div>
      <h2 class="text-lg font-semibold text-slate-900"><%= title %></h2>
      <p class="text-sm text-slate-500">Resumen de actividad y costos</p>
    </div>
    <div class="flex gap-2">
      <select class="rounded-md border-slate-300 py-1.5 text-sm font-medium text-slate-700 focus:border-indigo-500 focus:ring-indigo-500">
        <option>Últimos 6 meses</option>
        <option>Este año</option>
      </select>
    </div>
  </div>

  <% if present? %>
    <div class="mb-8 grid gap-4 sm:grid-cols-3">
      <% s = evolution[:summary] %>
      
      <!-- Summary Card 1 -->
      <div class="rounded-lg border border-slate-200 p-4">
        <div class="flex items-center justify-between">
          <p class="text-sm font-medium text-slate-500">Etapas finalizadas</p>
          <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">Mensual</span>
        </div>
        <div class="mt-4 flex items-baseline gap-2">
          <span class="text-2xl font-semibold text-slate-900"><%= s[:completed][:current] %></span>
          <% if s[:completed][:delta_pct] %>
            <span class="text-sm font-medium <%= s[:completed][:delta_pct] >= 0 ? 'text-green-600' : 'text-red-600' %>">
              <%= s[:completed][:delta_pct] > 0 ? '+' : '' %><%= s[:completed][:delta_pct] %>%
            </span>
          <% end %>
        </div>
      </div>

      <!-- Summary Card 2 -->
      <div class="rounded-lg border border-slate-200 p-4">
        <div class="flex items-center justify-between">
          <p class="text-sm font-medium text-slate-500">Asistencias</p>
          <span class="inline-flex items-center rounded-full bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">Mensual</span>
        </div>
        <div class="mt-4 flex items-baseline gap-2">
          <span class="text-2xl font-semibold text-slate-900"><%= s[:attendances][:current] %></span>
          <% if s[:attendances][:delta_pct] %>
            <span class="text-sm font-medium <%= s[:attendances][:delta_pct] >= 0 ? 'text-green-600' : 'text-red-600' %>">
              <%= s[:attendances][:delta_pct] > 0 ? '+' : '' %><%= s[:attendances][:delta_pct] %>%
            </span>
          <% end %>
        </div>
      </div>

      <!-- Summary Card 3 -->
      <div class="rounded-lg border border-slate-200 p-4">
        <div class="flex items-center justify-between">
          <p class="text-sm font-medium text-slate-500">Costo estimado</p>
          <span class="inline-flex items-center rounded-full bg-amber-50 px-2 py-1 text-xs font-medium text-amber-700 ring-1 ring-inset ring-amber-600/20">Mensual</span>
        </div>
        <div class="mt-4 flex items-baseline gap-2">
          <span class="text-2xl font-semibold text-slate-900"><%= currency(s[:estimated_cents][:current]) %></span>
          <% if s[:estimated_cents][:delta_pct] %>
            <span class="text-sm font-medium <%= s[:estimated_cents][:delta_pct] >= 0 ? 'text-green-600' : 'text-red-600' %>">
              <%= s[:estimated_cents][:delta_pct] > 0 ? '+' : '' %><%= s[:estimated_cents][:delta_pct] %>%
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid gap-8 sm:grid-cols-2">
      <div class="rounded-lg border border-slate-100 bg-slate-50/50 p-4">
        <h3 class="mb-4 text-sm font-medium text-slate-900">Progreso de obras</h3>
        <%= render Constructors::Dashboard::TwoLinesChartComponent.new(evolution: evolution) %>
      </div>
      <div class="rounded-lg border border-slate-100 bg-slate-50/50 p-4">
        <h3 class="mb-4 text-sm font-medium text-slate-900">Evolución de costos</h3>
        <%= render Constructors::Dashboard::TwoLinesChartComponent.new(evolution: evolution) %>
      </div>
    </div>
  <% else %>
    <div class="h-56 w-full rounded bg-slate-50 flex items-center justify-center border border-dashed border-slate-300">
      <p class="text-slate-500">No hay datos suficientes para mostrar la evolución.</p>
    </div>
  <% end %>
</section>
