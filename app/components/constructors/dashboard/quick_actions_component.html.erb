<% if has_content? %>
<div class="space-y-5">
  <%# Quick Access: Material Lists %>
  <section class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-amber-50/50 via-white to-orange-50/30 shadow-lg shadow-amber-500/5 ring-1 ring-slate-200/80">
    <div class="pointer-events-none absolute -right-10 -top-10 h-24 w-24 rounded-full bg-gradient-to-br from-amber-400/10 to-orange-400/10 blur-2xl"></div>
    
    <header class="relative flex items-center justify-between border-b border-slate-100/80 px-5 py-4">
      <h3 class="flex items-center gap-2.5 text-sm font-bold text-slate-900">
        <span class="flex h-8 w-8 items-center justify-center rounded-xl bg-gradient-to-br from-amber-400 to-orange-500 shadow-lg shadow-amber-500/30">
          <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
          </svg>
        </span>
        Materiales
      </h3>
      <% if recent_material_lists.any? %>
        <span class="rounded-full bg-amber-100 px-2.5 py-1 text-xs font-bold text-amber-700 shadow-sm"><%= recent_material_lists.size %></span>
      <% end %>
    </header>
    
    <% if recent_material_lists.any? %>
      <ul class="relative divide-y divide-slate-100/60">
        <% recent_material_lists.first(3).each do |list| %>
          <li>
            <%= link_to constructors_project_material_list_path(list.project, list), 
                class: "group/item flex items-center gap-3 px-5 py-3 transition-all hover:bg-gradient-to-r hover:from-amber-50/50 hover:to-transparent" do %>
              <div class="min-w-0 flex-1">
                <p class="truncate text-sm font-semibold text-slate-700 group-hover/item:text-amber-700"><%= list.name %></p>
                <p class="truncate text-xs text-slate-500"><%= list.project.name %></p>
              </div>
              <div class="flex h-7 w-7 shrink-0 items-center justify-center rounded-full bg-slate-100 text-slate-400 transition-all group-hover/item:bg-amber-100 group-hover/item:text-amber-600 group-hover/item:translate-x-0.5">
                <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                </svg>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="flex items-center justify-center py-6">
        <p class="text-sm text-slate-400">Sin listas aún</p>
      </div>
    <% end %>
  </section>

  <%# Quick Access: Blueprints %>
  <section class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-indigo-50/50 via-white to-violet-50/30 shadow-lg shadow-indigo-500/5 ring-1 ring-slate-200/80">
    <div class="pointer-events-none absolute -right-10 -top-10 h-24 w-24 rounded-full bg-gradient-to-br from-indigo-400/10 to-violet-400/10 blur-2xl"></div>
    
    <header class="relative flex items-center justify-between border-b border-slate-100/80 px-5 py-4">
      <h3 class="flex items-center gap-2.5 text-sm font-bold text-slate-900">
        <span class="flex h-8 w-8 items-center justify-center rounded-xl bg-gradient-to-br from-indigo-500 to-violet-600 shadow-lg shadow-indigo-500/30">
          <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498l4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 00-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0z" />
          </svg>
        </span>
        Planos
      </h3>
      <% if recent_blueprints.any? %>
        <span class="rounded-full bg-indigo-100 px-2.5 py-1 text-xs font-bold text-indigo-700 shadow-sm"><%= recent_blueprints.size %></span>
      <% end %>
    </header>
    
    <% if recent_blueprints.any? %>
      <ul class="relative divide-y divide-slate-100/60">
        <% recent_blueprints.first(3).each do |blueprint| %>
          <li>
            <%= link_to constructors_project_blueprint_path(blueprint.project, blueprint), 
                class: "group/item flex items-center gap-3 px-5 py-3 transition-all hover:bg-gradient-to-r hover:from-indigo-50/50 hover:to-transparent" do %>
              <div class="min-w-0 flex-1">
                <p class="truncate text-sm font-semibold text-slate-700 group-hover/item:text-indigo-700"><%= blueprint.name %></p>
                <p class="truncate text-xs text-slate-500"><%= blueprint.project.name %></p>
              </div>
              <div class="flex h-7 w-7 shrink-0 items-center justify-center rounded-full bg-slate-100 text-slate-400 transition-all group-hover/item:bg-indigo-100 group-hover/item:text-indigo-600 group-hover/item:translate-x-0.5">
                <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                </svg>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="flex items-center justify-center py-6">
        <p class="text-sm text-slate-400">Sin planos aún</p>
      </div>
    <% end %>
  </section>
</div>
<% end %>
