<div class="rounded-lg bg-white p-6 shadow-sm ring-1 ring-slate-200">
  <div class="flex items-center justify-between gap-4">
    <h2 class="text-lg font-semibold text-slate-800">Documentos recientes</h2>
    <span class="text-xs font-medium uppercase tracking-wide text-slate-400">Archivos</span>
  </div>
  <% if documents.any? %>
    <ul class="mt-5 space-y-3">
      <% documents.each do |document| %>
        <% record = document.documentable %>
        <li class="flex items-start justify-between gap-3 rounded-lg bg-slate-50 p-4 ring-1 ring-slate-200">
          <div>
            <p class="text-sm font-semibold text-slate-800"><%= document.file_name %></p>
            <p class="text-xs text-slate-500">
              <span class="font-medium"><%= owner_label_for(record) %></span>
              · <%= number_to_human_size(document.file_byte_size) if document.file_byte_size %>
              · <%= time_ago_in_words(document.uploaded_at) %> atrás
            </p>
          </div>
          <%= link_to 'Ver', link_path_for(record), class: 'text-xs font-medium text-indigo-600 hover:underline' %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="mt-5 text-sm text-slate-500">Todavía no se subieron documentos a tus obras.</p>
  <% end %>
</div>

