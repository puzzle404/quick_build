<section class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-purple-50/50 via-white to-pink-50/30 shadow-lg shadow-purple-500/5 ring-1 ring-slate-200/80">
  <div class="pointer-events-none absolute -right-10 -top-10 h-24 w-24 rounded-full bg-gradient-to-br from-purple-400/10 to-pink-400/10 blur-2xl"></div>
  
  <header class="relative flex items-center justify-between border-b border-slate-100/80 px-5 py-4">
    <h2 class="flex items-center gap-2.5 text-sm font-bold text-slate-900">
      <span class="flex h-8 w-8 items-center justify-center rounded-xl bg-gradient-to-br from-purple-500 to-pink-500 shadow-lg shadow-purple-500/30">
        <svg class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
        </svg>
      </span>
      Documentos recientes
    </h2>
    <% if documents.any? %>
      <span class="rounded-full bg-purple-100 px-2.5 py-1 text-xs font-bold text-purple-700 shadow-sm"><%= documents.size %></span>
    <% end %>
  </header>
  
  <% if documents.any? %>
    <ul class="relative divide-y divide-slate-100/60">
      <% documents.first(3).each do |document| %>
        <% record = document.documentable %>
        <li>
          <%= link_to link_path_for(record), class: "group/item flex items-center gap-3 px-5 py-3 transition-all hover:bg-gradient-to-r hover:from-purple-50/50 hover:to-transparent" do %>
            <div class="min-w-0 flex-1">
              <p class="truncate text-sm font-semibold text-slate-700 group-hover/item:text-purple-700"><%= document.file_name %></p>
              <p class="truncate text-xs text-slate-500">
                <span class="inline-flex items-center gap-1">
                  <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <%= time_ago_in_words(document.uploaded_at) %>
                </span>
                <% if document.file_byte_size %>
                  <span class="text-slate-300 mx-1">·</span>
                  <%= number_to_human_size(document.file_byte_size) %>
                <% end %>
              </p>
            </div>
            <div class="flex h-7 w-7 shrink-0 items-center justify-center rounded-full bg-slate-100 text-slate-400 transition-all group-hover/item:bg-purple-100 group-hover/item:text-purple-600 group-hover/item:translate-x-0.5">
              <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
              </svg>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="flex items-center justify-center py-6">
      <p class="text-sm text-slate-400">Sin documentos aún</p>
    </div>
  <% end %>
</section>
