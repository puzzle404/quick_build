<%= link_to helpers.constructors_project_person_path(project, person),
            class: "flex flex-col rounded-2xl border border-slate-200 bg-white p-4 text-left shadow-sm transition hover:-translate-y-0.5 hover:border-indigo-200 hover:shadow-lg" do %>
  <div class="flex items-center justify-between gap-2">
    <p class="text-base font-semibold text-slate-900"><%= person.full_name %></p>
    <% if person.active? %>
      <span class="rounded-full bg-emerald-100 px-2.5 py-0.5 text-xs font-medium text-emerald-700">Activo</span>
    <% else %>
      <span class="rounded-full bg-slate-100 px-2.5 py-0.5 text-xs font-medium text-slate-600">Inactivo</span>
    <% end %>
  </div>
  <% if person.role_title.present? %>
    <p class="mt-1 text-xs font-medium uppercase tracking-wide text-indigo-500"><%= person.role_title %></p>
  <% end %>
  <p class="mt-2 text-sm text-slate-500">
    Desde <%= person.start_date ? helpers.l(person.start_date, format: :short) : "—" %>
    <% if person.end_date.present? %> · Hasta <%= helpers.l(person.end_date, format: :short) %><% end %>
  </p>
  <% if person.notes.present? %>
    <p class="mt-4 line-clamp-2 text-sm text-slate-600"><%= person.notes %></p>
  <% end %>
<% end %>

