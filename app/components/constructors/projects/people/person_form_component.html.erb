<%= form_with model: person,
              url: person.persisted? ? helpers.constructors_project_person_path(project, person) : helpers.constructors_project_people_path(project),
              method: person.persisted? ? :patch : :post,
              class: "space-y-6" do |form| %>
  <div class="grid gap-4 sm:grid-cols-2">
    <div class="sm:col-span-2">
      <%= form.label :full_name, "Nombre y apellido", class: "block text-sm font-medium text-slate-700" %>
      <%= form.text_field :full_name, class: "mt-1 block w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500" %>
    </div>
    <div>
      <%= form.label :role_title, "Rol / oficio", class: "block text-sm font-medium text-slate-700" %>
      <%= form.text_field :role_title, class: "mt-1 block w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500" %>
    </div>
    <div>
      <%= form.label :document_id, "Documento", class: "block text-sm font-medium text-slate-700" %>
      <%= form.text_field :document_id, class: "mt-1 block w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500" %>
    </div>
    <div>
      <%= form.label :phone, "TelÃ©fono", class: "block text-sm font-medium text-slate-700" %>
      <%= form.text_field :phone, class: "mt-1 block w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500" %>
    </div>
    <div>
      <%= form.label :status, "Estado", class: "block text-sm font-medium text-slate-700" %>
      <%= form.select :status, ProjectPerson.statuses.keys.map { |k| [k.humanize, k] }, {}, class: "mt-1 block w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500" %>
    </div>
    <div>
      <%= form.label :start_date, "Inicio", class: "block text-sm font-medium text-slate-700" %>
      <%= form.date_field :start_date, class: "mt-1 block w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500" %>
    </div>
    <div>
      <%= form.label :end_date, "Fin", class: "block text-sm font-medium text-slate-700" %>
      <%= form.date_field :end_date, class: "mt-1 block w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500" %>
    </div>
  </div>

  <div>
    <%= form.label :notes, "Notas", class: "block text-sm font-medium text-slate-700" %>
    <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500" %>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "Cancelar", helpers.constructors_project_people_path(project), class: Ui::ButtonComponent.classes_for(variant: :secondary, size: :md) %>
    <%= render Ui::ButtonComponent.new(label: person.persisted? ? "Guardar cambios" : "Crear persona", type: :submit, size: :md) %>
  </div>
<% end %>

