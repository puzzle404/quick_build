<%= link_to show_path, class: "block h-full group" do %>
  <div class="card bg-base-100 shadow-sm h-full">
    <figure class="relative h-48 overflow-hidden">
      <div class="absolute inset-0 z-20 flex items-start justify-start p-3 pointer-events-none">
        <div class="pointer-events-auto">
          <%= render Ui::StatusBadgeComponent.new(text: status_badge_text, tone: status_badge_tone) %>
        </div>
      </div>
      <% if cover_image.present? %>
        <%= image_tag cover_image, class: "relative z-0 h-48 w-full object-cover transition-transform duration-500 group-hover:scale-105", alt: "Imagen del proyecto #{project.name}" %>
      <% else %>
        <div class="relative z-0 flex h-48 w-full items-center justify-center bg-gradient-to-br from-slate-100 via-white to-slate-200 text-sm font-medium text-slate-500">
          Imagen pendiente
        </div>
      <% end %>
    </figure>

    <div class="card-body">
      <h2 class="card-title">
        <span class="truncate"><%= project.name %></span>
      </h2>
      <p class="text-sm text-slate-600">
        <span class="font-medium">Ubicación:</span> <%= location_label %><br>
        <span class="font-medium">Inicio:</span> <%= formatted_project_date(project.start_date) %> ·
        <span class="font-medium">Fin:</span> <%= formatted_project_date(project.end_date) %>
      </p>
      <div class="card-actions justify-end">
        <div class="badge badge-outline">Etapas: <%= stages_count %></div>
        <div class="badge badge-outline">Listas: <%= material_lists_count %></div>
      </div>
    </div>
  </div>
<% end %>
