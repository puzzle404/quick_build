<section class="bg-white rounded-2xl p-8 border border-slate-200 shadow-sm">

  <!-- Top: Status + buttons -->
  <div class="flex items-start justify-between mb-4">
    <%= project_status_badge(project) %>

    <div class="flex gap-2">
      <%= render Ui::ButtonComponent.new(label: 'Editar obra', path: edit_constructors_project_path(project), variant: :primary) %>
      <%= render Ui::ButtonComponent.new(label: 'Volver', path: constructors_projects_path, variant: :ghost) %>
    </div>
  </div>

  <!-- Title + location -->
  <h1 class="text-[28px] font-semibold text-slate-900 leading-tight"><%= project.name %></h1>
  <p class="mt-1 text-sm text-slate-500">
    Proyecto en • <%= project.location_label %>
  </p>

  <!-- Owner -->
  <div class="flex items-center gap-3 mt-6">
    <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-medium">
      <%= project.owner.email.first.upcase %>
    </div>
    <div>
      <p class="text-sm font-medium text-slate-900"><%= project.owner.email %></p>
      <p class="text-xs text-slate-500">Responsable de obra</p>
    </div>
  </div>

  <!-- Dates row -->
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 mt-8">

    <div>
      <div class="text-xs uppercase font-medium text-slate-500 tracking-wide">Inicio</div>
      <div class="mt-1 text-base font-semibold text-slate-900">
        <%= formatted_project_date(project.start_date) %>
      </div>
    </div>

    <div>
      <div class="text-xs uppercase font-medium text-slate-500 tracking-wide">Fin estimado</div>
      <div class="mt-1 text-base font-semibold text-slate-900">
        <%= formatted_project_date(project.end_date) %>
      </div>
    </div>

    <div>
      <div class="text-xs uppercase font-medium text-slate-500 tracking-wide">Ultima actualización</div>
      <div class="mt-1 text-base font-semibold text-slate-900">
        hace <%= time_ago_in_words(updated_timestamp) %>
      </div>
    </div>

  </div>

</section>
