<header class="relative z-50 bg-white border-b border-slate-200">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <%= link_to root_path, class: "flex items-center gap-2" do %>
        <div class="h-8 w-8 rounded bg-indigo-600 flex items-center justify-center text-white font-bold">Q</div>
        <span class="text-xl font-bold text-slate-900">Quick Build</span>
      <% end %>
    </div>
    <div class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-slate-700" id="mobile-menu-button">
        <span class="sr-only">Abrir menú</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <% if authenticated? %>
        <% if helpers.constructor? %>
          <%= link_to "Dashboard", constructors_root_path, class: "text-sm font-semibold leading-6 text-slate-900 hover:text-indigo-600" %>
          <%= link_to "Proyectos", constructors_projects_path, class: "text-sm font-semibold leading-6 text-slate-900 hover:text-indigo-600" %>
        <% end %>
        <% if helpers.buyer? %>
          <%= link_to "Catálogo", products_path, class: "text-sm font-semibold leading-6 text-slate-900 hover:text-indigo-600" %>
          <%= link_to "Carrito", cart_path, class: "text-sm font-semibold leading-6 text-slate-900 hover:text-indigo-600" %>
        <% end %>
      <% else %>
        <a href="#features" class="text-sm font-semibold leading-6 text-slate-900 hover:text-indigo-600">Características</a>
        <a href="#" class="text-sm font-semibold leading-6 text-slate-900 hover:text-indigo-600">Precios</a>
        <a href="#" class="text-sm font-semibold leading-6 text-slate-900 hover:text-indigo-600">Contacto</a>
      <% end %>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-4">
      <% if authenticated? %>
        <!-- User dropdown -->
        <div class="relative" data-controller="dropdown">
          <button type="button" class="flex items-center gap-x-1 rounded-full bg-white p-1 text-sm text-slate-900 hover:bg-slate-50 ring-1 ring-slate-200" data-action="click->dropdown#toggle">
            <div class="h-8 w-8 rounded-full bg-indigo-600 flex items-center justify-center text-white font-semibold">
              <%= user_initials %>
            </div>
            <svg class="h-5 w-5 text-slate-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
            </svg>
          </button>
          <div class="hidden absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" data-dropdown-target="menu">
            <div class="py-1">
              <div class="px-4 py-2 text-sm text-slate-700 border-b border-slate-100">
                <p class="font-semibold"><%= @current_user.email %></p>
              </div>
              <% if helpers.constructor? %>
                <%= link_to "Dashboard", constructors_root_path, class: "block px-4 py-2 text-sm text-slate-700 hover:bg-slate-50" %>
                <%= link_to "Proyectos", constructors_projects_path, class: "block px-4 py-2 text-sm text-slate-700 hover:bg-slate-50" %>
              <% end %>
              <% if helpers.buyer? %>
                <%= link_to "Catálogo", products_path, class: "block px-4 py-2 text-sm text-slate-700 hover:bg-slate-50" %>
              <% end %>
              <%= button_to "Cerrar sesión", session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-slate-50" %>
            </div>
          </div>
        </div>
      <% else %>
        <%= link_to "Iniciar sesión", new_session_path, class: "text-sm font-semibold leading-6 text-slate-900 hover:text-indigo-600", data: { turbo_frame: "login_modal" } %>
        <%= link_to "Crear cuenta", new_registration_path, class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      <% end %>
    </div>
  </nav>
  <!-- Mobile menu -->
  <div class="lg:hidden hidden" role="dialog" aria-modal="true" id="mobile-menu">
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-slate-900/10">
      <div class="flex items-center justify-between">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <div class="h-8 w-8 rounded bg-indigo-600 flex items-center justify-center text-white font-bold">Q</div>
          <span class="text-xl font-bold text-slate-900">Quick Build</span>
        <% end %>
        <button type="button" class="-m-2.5 rounded-md p-2.5 text-slate-700" id="mobile-menu-close">
          <span class="sr-only">Cerrar menú</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-slate-500/10">
          <div class="space-y-2 py-6">
            <% if authenticated? %>
              <% if helpers.constructor? %>
                <%= link_to "Dashboard", constructors_root_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-slate-900 hover:bg-slate-50" %>
                <%= link_to "Proyectos", constructors_projects_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-slate-900 hover:bg-slate-50" %>
              <% end %>
              <% if helpers.buyer? %>
                <%= link_to "Catálogo", products_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-slate-900 hover:bg-slate-50" %>
                <%= link_to "Carrito", cart_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-slate-900 hover:bg-slate-50" %>
              <% end %>
            <% else %>
              <a href="#features" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-slate-900 hover:bg-slate-50">Características</a>
              <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-slate-900 hover:bg-slate-50">Precios</a>
              <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-slate-900 hover:bg-slate-50">Contacto</a>
            <% end %>
          </div>
          <div class="py-6 space-y-2">
            <% if authenticated? %>
              <div class="px-3 py-2 text-sm text-slate-700 border-b border-slate-200 mb-2">
                <p class="font-semibold"><%= @current_user.email %></p>
              </div>
              <%= button_to "Cerrar sesión", session_path, method: :delete, class: "-mx-3 block w-full text-left rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-red-600 hover:bg-slate-50" %>
            <% else %>
              <%= link_to "Iniciar sesión", new_session_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-slate-900 hover:bg-slate-50", data: { turbo_frame: "login_modal" } %>
              <%= link_to "Crear cuenta", new_registration_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-white bg-indigo-600 hover:bg-indigo-500" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>


