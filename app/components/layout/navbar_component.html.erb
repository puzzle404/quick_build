<div class="navbar bg-base-100 shadow-sm hotwire-native:hidden">
  <div class="navbar-start">
    
  </div>
  <div class="navbar-center">
    <%= link_to "Quick Build", root_path, class: "btn btn-ghost text-xl" %>
  </div>
  <div class="navbar-end gap-1">
    <%# Botón buscar (placeholder) %>
    <button class="btn btn-ghost btn-circle">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </button>
    <%# Indicador/bell %>
    <button class="btn btn-ghost btn-circle">
      <div class="indicator">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <span class="badge badge-xs badge-primary indicator-item"></span>
      </div>
    </button>

    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
        </svg>
      </div>
      <ul tabindex="-1" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-10 mt-3 w-52 p-2 shadow">
        <li><%= link_to "Inicio", root_path %></li>
        <% if helpers.constructor? %>
          <li><%= link_to "Dashboard", constructors_root_path %></li>
          <li><%= link_to "Proyectos", constructors_projects_path %></li>
        <% end %>
        <% if helpers.buyer? %>
          <li><%= link_to "Catálogo", products_path %></li>
        <% end %>
        <%= button_to "Cerrar sesión", session_path, method: :delete, class: "btn btn-ghost btn-sm" if helpers.authenticated? %>
      </ul>
    </div>
    <%= render "carts/cart" if helpers.buyer? %>
  </div>
</div>
