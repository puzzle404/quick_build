<div class="navbar bg-base-100 shadow-sm hotwire-native:hidden">
  <div class="navbar-start">
    
  </div>
  <div class="navbar-center">
    <%= link_to "Quick Build", root_path, class: "btn btn-ghost text-xl" %>
  </div>
  <div class="navbar-end gap-1">
    <%# Botón buscar (placeholder) %>
    <button class="btn btn-ghost btn-circle">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </button>
    <%# Indicador/bell %>
    <button class="btn btn-ghost btn-circle">
      <div class="indicator">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <span class="badge badge-xs badge-primary indicator-item"></span>
      </div>
    </button>

    <%= render Ui::DropdownMenuComponent.new(aria_label: 'Abrir menú', anchor: 'bottom end', button_class: 'px-3 py-2') do %>
      <%= link_to "Inicio", root_path, class: "block px-4 py-2 text-sm text-gray-700 focus:bg-gray-100 focus:text-gray-900 focus:outline-hidden" %>
      <% if helpers.constructor? %>
        <%= link_to "Dashboard", constructors_root_path, class: "block px-4 py-2 text-sm text-gray-700 focus:bg-gray-100 focus:text-gray-900 focus:outline-hidden" %>
        <%= link_to "Proyectos", constructors_projects_path, class: "block px-4 py-2 text-sm text-gray-700 focus:bg-gray-100 focus:text-gray-900 focus:outline-hidden" %>
      <% end %>
      <% if helpers.buyer? %>
        <%= link_to "Catálogo", products_path, class: "block px-4 py-2 text-sm text-gray-700 focus:bg-gray-100 focus:text-gray-900 focus:outline-hidden" %>
      <% end %>
      <% if helpers.authenticated? %>
        <%= button_to "Cerrar sesión", session_path, method: :delete, class: "block w-full px-4 py-2 text-left text-sm text-gray-700 focus:bg-gray-100 focus:text-gray-900 focus:outline-hidden" %>
      <% else %>
        <%= link_to "Iniciar sesión", new_session_path, class: "block px-4 py-2 text-sm text-gray-700 focus:bg-gray-100 focus:text-gray-900 focus:outline-hidden" %>
      <% end %>
    <% end %>


    <%= render "carts/cart" if helpers.buyer? %>
  </div>
</div>
