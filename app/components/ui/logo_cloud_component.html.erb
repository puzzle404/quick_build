<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <h2 class="text-center text-lg font-semibold leading-8 text-slate-900"><%= @title %></h2>
    <div class="mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-5">
      <% companies.each do |company| %>
        <div class="col-span-2 max-h-12 w-full object-contain lg:col-span-1 flex justify-center">
          <div class="group flex items-center justify-center gap-2 opacity-60 grayscale transition duration-200 hover:opacity-100 hover:grayscale-0">
            <svg class="h-8 w-8 text-slate-900" viewBox="0 0 24 24" fill="currentColor">
              <path d="<%= company[:svg_path] %>"/>
            </svg>
            <span class="text-lg font-bold text-slate-900"><%= company[:name] %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
