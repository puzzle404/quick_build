<div
  class="fixed inset-0 z-[60] flex items-center justify-center px-4 py-6 sm:px-6"
  data-controller="modal"
  data-action="keyup@window->modal#closeOnEscape"
  role="dialog"
  aria-modal="true"
>
  <div
    class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm"
    aria-hidden="true"
    data-modal-target="backdrop"
    data-action="click->modal#close"
  ></div>
  <div
    class="relative z-10 mx-auto w-full overflow-hidden rounded-lg bg-white shadow-2xl ring-1 ring-black/5 <%= panel_width_class %>"
    data-modal-target="panel"
  >
    <% if header? %>
      <div class="border-b border-slate-100 px-6 py-5 sm:px-10">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
          <div class="<%= subtitle.present? ? 'space-y-2' : '' %>">
            <% if tag_label.present? %>
              <p class="inline-flex items-center gap-2 text-[11px] font-semibold uppercase tracking-[0.2em] text-indigo-500">
                <span class="inline-flex h-2 w-2 rounded-full bg-indigo-500"></span>
                <%= tag_label %>
              </p>
            <% end %>
            <% if title.present? %>
              <h1 class="text-2xl font-semibold text-slate-900"><%= title %></h1>
            <% end %>
            <% if subtitle.present? %>
              <p class="mt-1 text-sm text-slate-600"><%= subtitle %></p>
            <% end %>
          </div>
          <div class="flex items-center gap-3">
            <% if auxiliary_button.present? %>
              <%= render Ui::ButtonComponent.new(**auxiliary_button) %>
            <% end %>
            <button
              type="button"
              class="inline-flex h-8 w-8 items-center justify-center rounded-lg text-slate-400 transition hover:bg-slate-100 hover:text-slate-500"
              data-action="modal#close"
              aria-label="Cerrar modal"
            >
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    <% end %>

    <div class="max-h-[80vh] overflow-y-auto <%= body_padding %>">
      <%= content %>
    </div>
  </div>
</div>
