<header class="<%= container_classes %>">
  <div class="space-y-1">
    <h1 class="text-2xl font-semibold text-slate-800"><%= title %></h1>
    <% if subtitle.present? %>
      <p class="text-sm text-slate-500"><%= subtitle %></p>
    <% end %>
    <% if meta_html.present? %>
      <div><%= meta_html.html_safe %></div>
    <% end %>
  </div>

  <% if content.present? %>
    <div class="flex flex-wrap items-center gap-2">
      <%= content %>
    </div>
  <% end %>
</header>
