<section class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-24 sm:py-32">
  <!-- Decorative background -->
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="absolute -top-1/2 left-1/2 h-[800px] w-[800px] -translate-x-1/2 rounded-full bg-gradient-to-r from-indigo-500/20 to-purple-500/20 blur-3xl"></div>
    <div class="absolute bottom-0 right-0 h-[400px] w-[400px] rounded-full bg-gradient-to-l from-emerald-500/10 to-cyan-500/10 blur-3xl"></div>
  </div>
  
  <div class="relative mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        <%= @title %>
      </h2>
      <p class="mt-4 text-lg leading-8 text-slate-300">
        <%= @subtitle %>
      </p>
    </div>
    
    <dl class="mx-auto mt-16 grid max-w-2xl grid-cols-2 gap-6 text-center sm:gap-8 lg:mx-0 lg:max-w-none lg:grid-cols-4">
      <% stats.each do |stat| %>
        <div class="group relative overflow-hidden rounded-2xl bg-white/5 p-8 ring-1 ring-white/10 backdrop-blur-sm transition-all duration-300 hover:bg-white/10 hover:ring-white/20 hover:scale-105">
          <!-- Icon -->
          <div class="mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-xl bg-<%= stat[:color] %>-500/20 text-<%= stat[:color] %>-400 ring-1 ring-<%= stat[:color] %>-500/30">
            <% case stat[:icon] %>
            <% when "building" %>
              <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008z" />
              </svg>
            <% when "users" %>
              <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
              </svg>
            <% when "cube" %>
              <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 7.5l-9-5.25L3 7.5m18 0l-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9" />
              </svg>
            <% when "check" %>
              <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            <% end %>
          </div>
          
          <dt class="text-sm font-medium leading-6 text-slate-400">
            <%= stat[:label] %>
          </dt>
          <dd class="mt-2 text-4xl font-bold tracking-tight text-white sm:text-5xl">
            <%= stat[:value] %>
          </dd>
        </div>
      <% end %>
    </dl>
  </div>
</section>
