<h1>Your Cart</h1>
<% if @cart.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <ul>
    <% @products.each do |product| %>
      <li>
        <%= product.name %> (<%= @cart[product.id.to_s] %>)
        <%= button_to 'Remove', remove_item_cart_path(product_id: product.id), method: :delete %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Checkout', new_order_path %>
<% end %>
