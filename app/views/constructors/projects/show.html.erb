<div class="space-y-8 pb-12">
  <%= render Constructors::Projects::ProjectHeaderComponent.new(project: @project) %>
  <%= render Constructors::Projects::SectionsNavComponent.new(project: @project, current_section: :overview) %>
  <%= render Constructors::Projects::ProjectMetricsComponent.new(project: @project) %>

  <section class="grid gap-6 lg:grid-cols-3">
    <div class="space-y-6 lg:col-span-2">
      <section class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
        <div class="flex items-center justify-between gap-4">
          <div>
            <h2 class="text-lg font-semibold text-slate-900">Planificación</h2>
            <p class="mt-1 text-sm text-slate-500">Resumen rápido de etapas y materiales.</p>
          </div>
          <%= link_to "Ver planificación", constructors_project_planning_path(@project),
                      class: "inline-flex items-center rounded-lg bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500" %>
        </div>

        <div class="mt-6 grid gap-4 sm:grid-cols-3">
          <div class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Etapas</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900"><%= @project.project_stages.count %></p>
            <p class="mt-1 text-xs text-slate-500">Definidas en esta obra</p>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Listas de materiales</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900"><%= @project.material_lists.count %></p>
            <p class="mt-1 text-xs text-slate-500">Totales vinculadas a la obra</p>
          </div>
          <div class="rounded-2xl border border-slate-200 bg-slate-50 p-4">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Fechas clave</p>
            <p class="mt-2 text-sm text-slate-700">
              Inicio: <span class="font-medium text-slate-900"><%= formatted_project_date(@project.start_date) %></span>
            </p>
            <p class="text-sm text-slate-700">
              Fin: <span class="font-medium text-slate-900"><%= formatted_project_date(@project.end_date) %></span>
            </p>
          </div>
        </div>
      </section>
      <%= render Constructors::Projects::DocumentsPanelComponent.new(project: @project) %>
    </div>

    <div class="space-y-6">
      <%= render Constructors::Projects::TeamPanelComponent.new(project: @project, membership: @membership) %>
      <%= render Constructors::Projects::ActivityPanelComponent.new(activity_entries: @activity_entries) %>
    </div>
  </section>
</div>
