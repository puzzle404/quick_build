<%= render Constructors::Projects::SectionsNavComponent.new(project: @project, current_section: :planning) %>

<div class="mt-6 space-y-6">
  <header class="space-y-1">
    <h1 class="text-2xl font-semibold text-slate-900">Agregar documentos a <%= @stage.name %></h1>
    <p class="text-sm text-slate-500">Seleccioná uno o varios PDF y súbelos para compartirlos con tu equipo.</p>
  </header>

  <section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <%= form_with scope: :document, url: constructors_project_stage_documents_path(@project, @stage), multipart: true, class: "space-y-5" do |form| %>
      <div>
        <%= form.label :files, "Seleccionar archivos", class: "block text-sm font-medium text-slate-700" %>
        <%= form.file_field :files, multiple: true, accept: ".pdf,application/pdf", class: "mt-2 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm shadow-sm" %>
        <p class="mt-1 text-xs text-slate-500">Formatos admitidos: PDF (hasta 25 MB cada uno).</p>
      </div>

      <div class="flex items-center gap-3">
        <%= render Ui::ButtonComponent.new(label: 'Subir documentos', type: :submit) %>
        <%= render Ui::ButtonComponent.new(label: 'Cancelar', path: constructors_project_stage_path(@project, @stage), variant: :secondary) %>
      </div>
    <% end %>
  </section>
</div>
