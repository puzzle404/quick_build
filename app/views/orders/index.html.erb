<h1 class="mb-6 text-2xl font-bold">Orders</h1>
<div class="space-y-2">
  <% @orders.each do |order| %>
    <div class="rounded bg-white p-4 shadow">
      <%= link_to "Order ##{order.id}", order_path(order), class: 'text-indigo-600 hover:underline' %> - <%= order.state %>
    </div>
  <% end %>
</div>
